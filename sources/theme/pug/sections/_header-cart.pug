//- Header Cart
.rd-navbar-basket-wrap
	button.rd-navbar-basket.fl-bigmug-line-shopping198( data-rd-navbar-toggle='.cart-inline' ): span 2
	.cart-inline
		.cart-inline-header
			h5.cart-inline-title In cart:
				span  2
				|  Products
			h6.cart-inline-title Total price:
				span  $800
		.cart-inline-body
			.cart-inline-item
				.unit.align-items-center
					.unit-left: a.cart-inline-figure( href='single-product.html' ): +png('product-mini-9-100x100')
					.unit-body
						h6.cart-inline-name: a( href='single-product.html' ) CB2 Coup Grey Office Chair
						div: .group-xs.group-middle-1
							div.table-cart-stepper: input.form-input( type='number', data-zeros='true', value='1', min='1', max='1000' )
							h6.cart-inline-title $550
			.cart-inline-item
				.unit.align-items-center
					.unit-left: a.cart-inline-figure( href='single-product.html' ): +png('product-mini-10-100x100' )
					.unit-body
						h6.cart-inline-name: a( href='single-product.html' ) Ikea Tertial Work lamp
						div: .group-xs.group-middle-1
							div.table-cart-stepper: input.form-input( type='number', data-zeros='true', value='1', min='1', max='1000' )
							h6.cart-inline-title $250

		.cart-inline-footer
			.group-sm
				a( href='cart-page.html' ).button.button-md.button-default-outline-2.button-wapasha Go to cart
				a( href='checkout.html' ).button.button-md.button-primary.button-pipaluk Checkout