mixin inline-subscribe-form(obj)
	-  var uniquePrefix = subscribeFormCounter
	if (obj.customUnique)
		- var uniquePrefix = obj.customUnique
	else
		- subscribeFormCounter = subscribeFormCounter + 1

	// RD Mailform
	form.rd-form.rd-mailform.rd-form-inline.oh-desktop( data-form-output='form-output-global', data-form-type='subscribe', method='post', action='bat/rd-mailform.php' )
		.form-wrap.wow.slideInUp
			input.form-input( id='subscribe-form-' + uniquePrefix + '-email', type='email', name='email', data-constraints='@Email @Required' )
			label.form-label( for='subscribe-form-' + uniquePrefix + '-email' ) Enter Your E-mail
		.form-button.wow.slideInRight
			button.button( type='submit', class= obj.button ? obj.button : 'button-gray-7' ) Subscribe