mixin post-ruth(obj)
	// Post Ruth
	article.post.post-ruth( class= obj.mod )&attributes( attributes )
		.unit.unit-spacing-lg.flex-column.flex-sm-row.align-items-sm-center.flex-md-column.align-items-md-start.flex-lg-row.align-items-lg-center
			.unit-left: a.post-ruth-figure( href=links.post): +jpg( obj.img )
			.unit-body: .post-ruth-body
				.post-ruth-time: time( datetime= obj.time.datetime )= obj.time.dateText
				h5.post-ruth-title: a( href=links.post)= obj.title
				+badge({ mod: obj.badge.mod, text: obj.badge.text })