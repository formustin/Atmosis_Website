mixin post-classic(obj)
	// Post Classic
	article.post.post-classic( class= obj.mod )
		h4.post-classic-title
			if(obj.blogPost == true)
				= obj.title
			else
				a( href=links.post)= obj.title
		.post-classic-panel.group-middle.justify-content-start
			+badge({ mod: obj.badge.mod, text: obj.badge.text })
			.post-classic-comments
				span.icon.fa.fa-comments-o
				a( href='#' )= obj.numberComments ? obj.numberComments : '14'
			.post-classic-time
				span.icon.fa.fa-clock-o
				time( datetime= obj.time.datetime )= obj.time.dateText
			.post-classic-author by
				a( href='#' )= obj.author ? obj.author : 'Gavin Bell'

		if(obj.text)
			p.post-classic-text= obj.text

		if(obj.owl)
			// Owl Carousel
			.owl-carousel.owl-dots-white( data-items='1', data-dots='true', data-animation-in='fadeIn', data-animation-out='fadeOut' )
				each owlItem in obj.owl
					+jpg(owlItem.img)

		else if(obj.video)
			.post-classic-video
				.embed-responsive.embed-responsive-16by9
					iframe.embed-responsive-item(src= obj.video, width='100', height='100', allowfullscreen)

		else if(obj.gallery)
			a.post-classic-gallery( href=links.post)
				.row.row-30
					.col-12.col-custom-left
						.post-classic-figure: +jpg(obj.gallery.img)
					.col-12.col-custom-right
						.post-classic-figure-small: +jpg(obj.gallery.img2)
						.post-classic-figure-small: +jpg(obj.gallery.img3)

		else
			if(obj.blogPost == true)
				.post-classic-figure: +jpg( obj.img )
			else
				a.post-classic-figure( href=links.post): +jpg( obj.img )

mixin post-modern(obj)
	// Post Modern
	article.post.post-modern&attributes( attributes )
		a.post-modern-figure( href=links.post)
			+jpg( obj.img )
			.post-modern-time
				time( datetime= obj.time.datetime )
					span.post-modern-time-number= obj.time.dateNumber
					span.post-modern-time-month= obj.time.dateMonth
		h5.post-modern-title: a( href=links.post)= obj.title
		p.post-modern-text= obj.text

mixin post-creative(obj)
	// Post Creative
	article.post.post-creative( class= obj.mod )
		.post-creative-header
			.group-md
				div
					.unit.flex-column.flex-sm-row.unit-spacing-sm.align-items-center
						.unit-left
							+jpg(obj.imgUser, 'img-circles' )
						.unit-body
							.post-creative-author by
								a( href='#' )=' ' + obj.author
				.post-creative-time
					time( datetime= obj.time.datetime )= obj.time.dateText
		a.post-creative-figure( href=links.post)
			+jpg( obj.img )
		.post-creative-footer
			h5.post-creative-title: a( href=links.post)= obj.title

mixin post-aria(obj)
	// Post Aria
	article.post.post-aria( class= obj.mod )
		a.post-aria-figure( href=links.post)
			+jpg( obj.img )
		.post-aria-footer
