mixin quote-minimal(obj)
	// Quote Minimal
	article.quote-minimal( class= obj.mod )
		.quote-minimal-text: p.q= obj.text
		h6.quote-minimal-cite= obj.author + ' on'
			span.quote-minimal-source: a( href='#' )= obj.source