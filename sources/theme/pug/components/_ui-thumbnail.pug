mixin thumbnail-mary(obj)
	// Thumbnail Classic
	article.thumbnail.thumbnail-mary&attributes( attributes )
		.thumbnail-mary-figure: +jpg( obj.img )

		.thumbnail-mary-caption
			a.icon.fl-bigmug-line-zoom60( href='images/' + obj.imgOriginal + '.jpg', data-lightgallery='item' )
				+jpg( obj.img )
			if(obj.titleNone == true)
			else
				if(obj.thumbnailSmall == true)
					h6.thumbnail-mary-title: a( href='single-project.html' )= obj.title ? obj.title : 'Project #' + obj.number
				else
					h5.thumbnail-mary-title: a( href='single-project.html' )= obj.title ? obj.title : 'Project #' + obj.number
	if(obj.nameProject)
		.thumbnail-mary-description
			h5.thumbnail-mary-project: a( href='single-project.html' )= obj.nameProject
			span.thumbnail-mary-decor
			h5.thumbnail-mary-time
				time( datetime= obj.datetime )= obj.time

