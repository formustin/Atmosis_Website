mixin thumbnail-classic(obj)
	// Thumbnail Classic
	article.thumbnail.thumbnail-classic&attributes( attributes )
		.thumbnail-classic-figure
			+jpg( obj.img )

		.thumbnail-classic-caption
			.thumbnail-classic-title-wrap
				a.icon.fl-bigmug-line-zoom60( href='images/' + obj.imgOriginal + '.jpg', data-lightgallery='item' )
					+jpg( obj.img )
				h5.thumbnail-classic-title: a( href='single-project.html' )= obj.title ? obj.title : 'Project #' + obj.number
			p.thumbnail-classic-text We work hard on every project to deliver top-notch interior design concepts that satisfy your wishes.

mixin thumbnail-modern(obj)
	// Thumbnail Modern
	article.thumbnail.thumbnail-modern( class= obj.mod )
		a.thumbnail-modern-figure( href='images/' + obj.imgOriginal + '.jpg', data-lightgallery='item' )
			+jpg( obj.img )

		.thumbnail-modern-caption
			h5.thumbnail-modern-title: a( href='single-project.html' )= obj.title
			p.thumbnail-modern-subtitle= obj.subtitle

