mixin box-icon-classic(obj)
	article.box-icon-classic( class= obj.mod )&attributes( attributes )
		.unit.box-icon-classic-body( class= obj.align)
			.unit-left
				.box-icon-classic-icon( class= obj.icon)
			.unit-body
				h5.box-icon-classic-title: a( href='single-service.html' )= obj.title
				p.box-icon-classic-text= obj.text

