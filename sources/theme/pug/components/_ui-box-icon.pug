//- box icon

mixin box-icon-creative(obj)
	article.box-icon-creative( class= obj.mod )
		.box-icon-creative-header
			.box-icon-creative-icon( class= obj.icon)
			.box-icon-creative-decor
			.box-icon-creative-count.box-ordered-item
		h5.box-icon-creative-title: a( href='single-service.html' )= obj.title
		p.box-icon-creative-text= obj.text

mixin box-icon-modern(obj)
	article.box-icon-modern( class= obj.mod )
		.box-icon-modern-icon( class= obj.icon)
		h5.box-icon-modern-title: a( href='single-service.html' )= obj.title
		.box-icon-modern-decor
