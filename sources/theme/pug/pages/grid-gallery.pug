extends  ../_skeleton

block variables
	- var activeCategory = 'gallery'
	- var pageName = 'Grid gallery'

block page 
	// Page Header
	+header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		mod: 'bg-overlay-48',
		bgImage: 'bg-gallery'
	})

	// Grid Gallery
	section.section.section-xl.bg-default.text-center
		.container.isotope-wrap
			.isotope-filters.isotope-filters-horizontal
				//- Isotope Filters
				button.isotope-filters-toggle.button.button-md.button-icon.button-icon-right.button-default-outline.button-wapasha( data-custom-toggle='#isotope-1', data-custom-toggle-hide-on-blur='true', data-custom-toggle-disable-on-blur='true' )
					span.icon.fa.fa-caret-down
					span Filter
				ul#isotope-1.isotope-filters-list
					li: a.active( href='#', data-isotope-filter='*' ) All
					li: a( href='#', data-isotope-filter='Type 1' ) Apartments
					li: a( href='#', data-isotope-filter='Type 2' ) Offices
					li: a( href='#', data-isotope-filter='Type 3' ) Corporate designs
			.row.row-50.isotope( data-lightgallery='group' )
