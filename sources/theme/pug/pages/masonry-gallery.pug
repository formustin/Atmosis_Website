extends  ../_skeleton

block variables
	- var activeCategory = 'gallery'
	- var pageName = 'Masonry gallery'

block page 
	// Page Header
	+header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		mod: 'bg-overlay-48',
		bgImage: 'bg-gallery'
	})

	// Grid Gallery
	section.section.section-xl.bg-default.text-center
		.container.isotope-wrap
			.isotope-filters.isotope-filters-horizontal
				//- Isotope Filters
				button.isotope-filters-toggle.button.button-md.button-icon.button-icon-right.button-default-outline.button-wapasha( data-custom-toggle='#isotope-8', data-custom-toggle-hide-on-blur='true', data-custom-toggle-disable-on-blur='true' )
					span.icon.fa.fa-caret-down
					| Filter
				ul#isotope-8.isotope-filters-list
					li: a.active( href='#', data-isotope-filter='*' ) All
					li: a( href='#', data-isotope-filter='Type 1' ) Apartments
					li: a( href='#', data-isotope-filter='Type 2' ) Offices
					li: a( href='#', data-isotope-filter='Type 3' ) Corporate designs
			.row.row-30.isotope( data-lightgallery='group' )
				.col-sm-4.col-lg-3.isotope-item( data-filter='Type 3' )
					+thumbnail-mary({
						img: 'masonry-gallery-1-270x300',
						imgOriginal: 'masonry-gallery-1-1200x800-original',
						number: '1'
					}).thumbnail-xs
				.col-sm-8.col-lg-6.isotope-item( data-filter='Type 2' )
					+thumbnail-mary({
						img: 'masonry-gallery-2-570x300',
						imgOriginal: 'grid-gallery-6-1200x800-original',
						number: '2'
					}).thumbnail-lg.thumbnail-custom-mobile
				.col-sm-4.col-lg-3.isotope-item( data-filter='Type 1' )
					+thumbnail-mary({
						img: 'masonry-gallery-3-270x300',
						imgOriginal: 'masonry-gallery-3-1200x800-original',
						number: '3'
					}).thumbnail-xs
				.col-sm-8.col-lg-6.isotope-item( data-filter='Type 3' )
					+thumbnail-mary({
						img: 'masonry-gallery-4-570x300',
						imgOriginal: 'masonry-gallery-4-1200x800-original',
						number: '4'
					}).thumbnail-lg.thumbnail-custom-mobile
				.col-sm-4.col-lg-3.isotope-item( data-filter='Type 2' )
					+thumbnail-mary({
						img: 'masonry-gallery-5-270x300',
						imgOriginal: 'fullwidth-gallery-5-1200x800-original',
						number: '5'
					}).thumbnail-xs
				.col-sm-4.col-lg-3.isotope-item( data-filter='Type 1' )
					+thumbnail-mary({
						img: 'masonry-gallery-6-270x300',
						imgOriginal: 'masonry-gallery-6-1200x800-original',
						number: '6'
					}).thumbnail-xs

			.button-wrap: button.button.button-md.button-default-outline.button-wapasha Load More


	// Page Footer
	+footer-classic