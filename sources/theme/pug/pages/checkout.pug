extends  ../_skeleton

//- Includes
include ../components/_form-checkout

block variables
	- var activeCategory = 'shop'
	- var pageName = 'Checkout'

block page 
	// Page Header
	+header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		mod: 'bg-overlay-40',
		bgImage: 'bg-shop-2'
	})

	// Section checkout form
	section.section.section-sm.section-first.bg-default.text-md-left
		.container
			.row.row-50.justify-content-center
				.col-md-10.col-lg-6
					h4.text-spacing-50 Billing Address
					+form-checkout({ customUnique: '1', checkbox: true })

				.col-md-10.col-lg-6
					h4.text-spacing-50 Delivery Address
					+form-checkout({ customUnique: '2' })

	// Shopping Cart
	section.section.section-sm.bg-default.text-md-left
		.container
			h4.text-spacing-50 Your shopping cart
			include ../sections/_shopping-cart


	// Section payment
	section.section.section-sm.section-last.bg-default.text-md-left
		.container
			.row.row-50.justify-content-center
				.col-md-10.col-lg-6
					h4.text-spacing-50 Payment methods
					.box-radio
						.radio-panel
							label.radio-inline.active
								input( name='input-group-radio', value='checkbox-1', type='radio', checked)
								| Direct Bank Transfer
							.radio-panel-content
								p Make your payment directly into our bank account. Please use your Order ID as the payment reference.

						.radio-panel
							label.radio-inline
								input( name='input-group-radio', value='checkbox-1', type='radio' )
								| PayPal
							.radio-panel-content
								p Pay via PayPal; you can pay with your credit card if you donâ€™t have a PayPal account.

						.radio-panel
							label.radio-inline
								input( name='input-group-radio', value='checkbox-1', type='radio' )
								| Cheque Payment
							.radio-panel-content
								p Please send a check to Store Name, Store Street, Store Town, Store State / County, Store Postcode.

				.col-md-10.col-lg-6
					h4.text-spacing-50 Cart totals
					.table-custom-responsive
						table.table-custom.table-custom-primary.table-checkout
							tbody
								tr
									td Cart Subtotal
									td $800
								tr
									td Shipping
									td Free
								tr
									td Total
									td $800

			.button-wrap.text-center
				a.button.button-primary.button-pipaluk( href='#' ) Proceed to checkout


	// Page Footer
	+footer-classic