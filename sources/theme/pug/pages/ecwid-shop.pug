extends  ../_skeleton

//- Includes
include ../components/_ui-product
include ../components/_ui-pagination
include ../sections/_header-ecwid-shop

block variables
	- var activeCategory = 'shop'
	- var pageName = 'Ecwid Shop'

block page
	// Page Header
	+header-ecwid

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		mod: 'bg-overlay-39',
		bgImage: 'bg-shop'
	})

	// Shop
	section.section.section-xl.bg-default
		.container
			.row.row-30.justify-content-center
				.col-md-6.text-center
					#my-search-17714115(style='display: inline-block')
					div
						script(data-cfasync='false', type='text/javascript', src='https://app.ecwid.com/script.js?17714115&data_platform=code&data_date=2019-07-23', charset='utf-8' defer)
						script(type='text/javascript' defer).
							xSearch("id=my-search-17714115");
				.col-md-12
					#my-store-17714115
					div
						script(data-cfasync='false', type='text/javascript', src='https://app.ecwid.com/script.js?17714115&data_platform=code&data_date=2019-07-23', charset='utf-8' defer)
						script(type='text/javascript' defer).
							xProductBrowser("categoriesPerRow=3", "views=grid(20,3) list(60) table(60)", "categoryView=grid", "searchView=list", "id=my-store-17714115");


	// Page Footer
	+footer-classic
