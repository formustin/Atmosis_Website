extends  ../_skeleton

block variables
	- var activeCategory = 'gallery'
	- var pageName = 'Single project 4'

block page 
	// Page Header
	+header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		mod: 'bg-overlay-46',
		bgImage: 'bg-single-project'
	})

	// Single Project
	section.section.section-sm.section-first.bg-default
		.container
			.row.row-50.justify-content-center
				.col-md-6.col-lg-7
					.row.row-30.row-lg-40( data-lightgallery='group' )
						.col-12: .oh-desktop
							+thumbnail-joan({
								img: 'project-22-700x518',
								imgOriginal: 'landscape-design/masonry-gallery-5-1200x800-original',
								number: '1'
							}).wow.slideInRight
						.col-12: .oh-desktop
							+thumbnail-joan({
								img: 'project-23-700x518',
								imgOriginal: 'grid-gallery-6-1200x800-original',
								number: '2'
							}).wow.slideInLeft
						.col-12: .oh-desktop
							+thumbnail-joan({
								img: 'project-24-700x518',
								imgOriginal: 'navbar-3-1200x800-original',
								number: '3'
							}).wow.slideInRight

				.col-md-6.col-lg-5
					.single-project.single-project-4
						h4.title-decoration-lines-bottom Weilround#[br.d-none.d-lg-block] entertainment center
							span
						p.text-gray-500 This project was designed for one of the biggest Swiss entertainment centers that grew in popularity in 2009 but required some additional interior design.
						p.text-gray-500 One of their new buildings needed top quality interior designed and our studio offered the services of Will O’Brien. Everything was completed in less than a month. Our studio combined some of the best interior design achievements in this project.

						.divider.divider-30

						ul.list.list-description.d-inline-block.d-md-block
							li
								span Designer:
								span Will O’Brien
							li
								span Year:
								span May 17, 2009
							li
								span Location:
								span Bern, Switzerland
							li
								span Categories:
								span Custom Projects

						.divider.divider-30
						.group-md.group-middle.justify-content-sm-start
							span.social-title Share
							div: +widget-list([], '', 'list-inline-sm social-list' )


	// Project Links
	section.section.section-sm.section-last.bg-default
		.container
			.project-navigation
				.row.row-30
					.col-sm-6
						+project-minimal({
							href: 'single-project-3.html',
							unit: 'flex-column flex-lg-row text-lg-left',
							img: 'project-minimal-1-168x139',
							title: 'Bedroom furniture design',
							text: '2017, Commercial Project, USA'
						})
					.col-sm-6
						+project-minimal({
							href: 'single-project.html',
							unit: 'flex-column flex-lg-row-reverse text-lg-right',
							img: 'project-minimal-2-168x139',
							title: 'Bedroom serenity redefined',
							text: '2017, Commercial Project, USA'
						})

				a.project-navigation-arrow-prev( href='single-project-3.html' )
				a.project-navigation-arrow-next( href='single-project.html' )


	// Page Footer
	+footer-classic