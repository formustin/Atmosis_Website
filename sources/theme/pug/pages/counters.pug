extends  ../_skeleton

//- Includes
include ../components/_ui-counters

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Counters'

block page 
	// Page Header
	+header-classic

	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		mod: 'bg-overlay-53',
		bgImage: 'bg-counter'
	})

	// Counter Modern
	section.section.section-xl.bg-default
		.container
			.row.row-30.justify-content-center
				.col-8.col-sm-4
					+counter-modern({
						number: '12',
						title: 'Design<br>awards'
					})
				.col-8.col-sm-4
					+counter-modern({
						number: '194',
						title: 'Successful<br>projects'
					})
				.col-8.col-sm-4
					+counter-modern({
						number: '25',
						title: 'Team<br>members'
					})


	include ../sections/_section-counter-classic

	// Counter Creative
	section.section.section-xl.bg-default
		.container
			.row.row-50.justify-content-center.border-classic.border-classic-big
				.col-sm-6.col-md-5.col-lg-3
					+counter-creative({
						icon: 'fl-bigmug-line-trophy55',
						number: '12',
						title: 'Design awards'
					})
				.col-sm-6.col-md-5.col-lg-3
					+counter-creative({
						icon: 'fl-bigmug-line-up104',
						number: '2',
						symbol: 'k',
						title: 'Designed interiors'
					})
				.col-sm-6.col-md-5.col-lg-3
					+counter-creative({
						icon: 'fl-bigmug-line-sun81',
						number: '679',
						title: 'Happy clients every day'
					})
				.col-sm-6.col-md-5.col-lg-3
					+counter-creative({
						icon: 'fl-bigmug-line-user143',
						number: '13',
						title: 'Team members'
					})


	// Counter Abby
	section.section.section-fluid.bg-default
		+parallax({
			img: 'bg-counter-3',
			innerClass: 'section-xl context-dark'
		})
			.container
				.row.row-30.justify-content-center
					.col-sm-6.col-md-3
						+counter-classic({
							mod: 'counter-abby',
							number: '12',
							title: 'Design awards'
						})
					.col-sm-6.col-md-3
						+counter-classic({
							mod: 'counter-abby',
							number: '194',
							title: 'Projects'
						})
					.col-sm-6.col-md-3
						+counter-classic({
							mod: 'counter-abby',
							number: '2',
							symbol: 'k',
							title: 'Designed interiors'
						})
					.col-sm-6.col-md-3
						+counter-classic({
							mod: 'counter-abby',
							number: '25',
							title: 'Team members'
						})


	// Counter Amy
	section.section.section-xl.bg-default
		.container
			.row.row-50.justify-content-center.align-items-center.align-items-lg-start.text-left
				include ../sections/_section-counter-amy


	// Page Footer
	+footer-classic